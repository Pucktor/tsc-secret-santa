<div class="container">
  <div class="content-card">
    <%= image_tag "rudolph.png", alt: "Rudolph", class: "rudolph-avatar", width: "127px" %>
    <h1>1. Create an event</h1>

    <%= simple_form_for @event do |f| %>
      <ul>
        <li>
          <%= f.label :title, "Title" %>
        </li>
        <li>
          <%= f.text_field :title %>
        </li>
        <li>
          <%= f.label :amount, "Amount to spend" %>
        </li>
        <li>
          <%= f.text_field :amount %>
        </li>
      </ul>
      
      
      <%= f.button :submit, class: 'button' %>
    <% end %>

  </div>
</div>
